<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/right_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/right_talk"
            app:layout_constraintEnd_toStartOf="@+id/right_talk"
            app:layout_constraintTop_toTopOf="@+id/right_talk"
            app:layout_constraintVertical_bias="0.8" />

        <TextView
            android:id="@+id/right_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:background="@drawable/background_talk_mine"
            android:gravity="start|center_vertical"
            android:linksClickable="true"
            android:maxWidth="250dp"
            android:padding="10dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
</layout>