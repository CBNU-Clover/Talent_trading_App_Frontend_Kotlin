<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".boardfunction.board_page.makeboard_page.MakeBoardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">


            <ImageButton
                android:id="@+id/backbt_makeboard"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_14"
                android:backgroundTint="#282928"></ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/pretendard_semibold"
                android:text="게시글 작성"
                android:textColor="@color/black"
                android:textSize="23dp">

            </TextView>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="제목"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/title"
                    android:layout_width="361dp"
                    android:layout_height="39dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border_gray"
                    android:ems="10"
                    android:fontFamily="@font/pretendard_medium"
                    android:hint=" 제목"
                    android:padding="10dp"
                    android:text=""
                    android:textColorHint="#C7C7C7"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="카테고리"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="176dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_whitegray"
                    android:fontFamily="@font/pretendard_semibold"
                    android:gravity="top"
                    android:padding="10dp"
                    android:text="카테고리 선택"
                    android:textColor="@color/black"
                    android:textColorHint="#C7C7C7"
                    android:textSize="15dp"></EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="내용"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/content"
                    android:layout_width="361dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border_gray"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="top"
                    android:hint=" 거래하고자 하는 내용을 자세하게 입력해주세요."
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#C7C7C7"
                    android:textSize="18dp"></EditText>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="가격"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/makeboard_price"
                    android:layout_width="176dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_gray"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="top"
                    android:hint="금액 입력하기"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#C7C7C7"
                    android:textSize="15dp"></EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="사진첨부"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:src="@drawable/baseline_add_24"
                        android:background="@drawable/border_gray"
                        app:tint="@color/white" />

                    <Button
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_marginLeft="22dp"
                        android:background="@drawable/border_gray" />

                    <Button
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/border_gray" />

                    <Button
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/border_gray" />


                </LinearLayout>

                <Button
                    android:id="@+id/make_content"
                    android:layout_width="360dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_green1"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="작성완료"
                    android:textColor="@color/white"
                    android:textSize="20dp"></Button>
            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>