<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F1F2F4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">


            <ImageButton
                android:id="@+id/back_btn_point"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_14"
                android:backgroundTint="#282928"></ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/pretendard_semibold"
                android:text="포인트"
                android:textColor="@color/black"
                android:textSize="23dp">

            </TextView>


        </RelativeLayout><!--
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#CFCFCF" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/border_point"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="36dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="MY 포인트"
                android:gravity="end"
                android:textColor="#3DC181"
                android:textSize="15dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/border_green1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/showpoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="22dp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:text="200,000"
                        android:textColor="@color/white"
                        android:textSize="22dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="20dp">

                    <View
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/charge_point"
                        android:layout_width="100dp"
                        android:layout_height="44dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/pretendard_semibold"
                        android:background="@drawable/border_gray"
                        android:gravity="center"
                        android:text="충전"
                        android:layout_weight="1"
                        android:textColor="#3DC181"
                        android:textSize="18dp" />


                    <!--<TextView
                        android:layout_width="123dp"
                        android:layout_height="44dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/pretendard_semibold"
                        android:background="@drawable/border_gray"
                        android:gravity="center"
                        android:text="송금"
                        android:textColor="#3DC181"
                        android:textSize="18dp" />
-->


                </LinearLayout>



            </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/pretendard_semibold"
                android:gravity="end"
                android:text="포인트 거래 내역"
                android:textColor="#5C5C5C"
                android:textSize="15dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_point_history"
                android:layout_margin="14dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_point_history" />

        </LinearLayout>


        </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>