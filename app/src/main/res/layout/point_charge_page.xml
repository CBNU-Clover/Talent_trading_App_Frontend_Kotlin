<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_14"
            android:backgroundTint="#282928"></ImageButton>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="포인트 충전"
            android:fontFamily="@font/malgunbd"
            android:textColor="@color/black"
            android:textSize="23dp">

        </TextView>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="충전할 금액을 입력하세요."
            android:textSize="23dp"
            android:fontFamily="@font/pretendard_semibold"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="26dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />





        <EditText
            android:id="@+id/point_amount"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:background="@drawable/border_gray"
            android:layout_height="55dp"
            android:textSize="20dp"
            android:inputType="number"
            android:fontFamily="@font/pretendard_semibold"
            android:hint="  00000"
            android:textColorHint="#C7C7C7"
            android:paddingLeft="5dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="370dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/charge_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="충전하기"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:background="@drawable/border_green1"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>



        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>