<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">


            <ImageButton
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_14"
                android:backgroundTint="#282928"></ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/malgunbd"
                android:text="후기 작성"
                android:textColor="@color/black"
                android:textSize="23dp">

            </TextView>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/cloverlogo2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/pretendard_semibold"
                            android:text="제목 0000 제작해 드립니다."
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100,000원"
                            android:textColor="#8D8D8D"
                            android:textSize="15dp" />

                    </LinearLayout>


                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="49dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.9"
                        android:textColor="@color/black"
                        android:textSize="34dp"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_10"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="bottom"
                        app:tint="#C0C0C0"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/ic_10"
                        app:tint="#C0C0C0"/>
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_10"
                        app:tint="#C0C0C0"/>
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/ic_10"
                        app:tint="#C0C0C0"/>
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_10"
                        app:tint="#C0C0C0"/>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="클로버를 통한 이용자들의 평가 입니다."
                    android:textColor="#A6A6A6"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="232dp"
                    android:layout_height="49dp"
                    android:layout_marginBottom="60dp"
                    android:layout_marginTop="47dp"
                    android:text="후기 작성하기"
                    android:textColor="#3DC181"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/border_green2"
                    android:textSize="20dp"
                    android:fontFamily="@font/pretendard_medium"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="포토 후기 3개"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textSize="15dp" />


                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/cloverlogo2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="구매 후기 30개"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textSize="15dp" />
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">


                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/baseline_account_circle_24"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="닉네임"
                            android:textColor="@color/black"
                            android:fontFamily="@font/pretendard_semibold"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/ic_10"
                                android:layout_gravity="center"
                                app:tint="#C0C0C0"/>
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/ic_10"
                                android:layout_gravity="center"
                                app:tint="#C0C0C0"/>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/ic_10"
                                android:layout_gravity="center"
                                app:tint="#C0C0C0"/>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/ic_10"
                                android:layout_gravity="center"
                                app:tint="#C0C0C0"/>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/ic_10"
                                android:layout_gravity="center"
                                app:tint="#C0C0C0"/>

                            <TextView
                                android:layout_width="21dp"
                                android:layout_height="18dp"
                                android:layout_marginLeft="6dp"
                                android:text="5.0"
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_marginLeft="6dp"
                                android:text="|"
                                android:textSize="15dp"
                                android:fontFamily="@font/pretendard_regular"
                                android:textColor="#757575"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_marginLeft="6dp"
                                android:text="23.07.21 16:32"
                                android:textSize="15dp"
                                android:fontFamily="@font/pretendard_regular"
                                android:textColor="#D9D9D9"
                                />






                        </LinearLayout>

                    </LinearLayout>
                
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="6dp"
                    android:text="작업일 : "
                    android:textSize="15dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="#757575"
                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="6dp"
                        android:text="10일"
                        android:textSize="15dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="#757575"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="6dp"
                        android:text="|"
                        android:textSize="15dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="#757575"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="6dp"
                        android:text="가격 : "
                        android:textSize="15dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="#757575"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="6dp"
                        android:text="15만원 - 20만원"
                        android:textSize="15dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="#757575"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작업도 빠르고 좋아용"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:layout_marginTop="17dp"/>
                


                
            </LinearLayout>

        </ScrollView>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>