<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F2F4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:layout_width="147dp"
                android:layout_height="51dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="245dp"
                android:layout_marginBottom="9dp"
                android:src="@drawable/logonew"></ImageView>

            <ImageView
                android:id="@+id/mypage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="70dp"
                app:srcCompat="@drawable/ic_29"
                app:tint="#A6A6A6" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/mypage"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-25dp"
                android:layout_marginEnd="27dp"
                app:srcCompat="@drawable/ic_12"
                app:tint="#A6A6A6" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/search_border"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/home_search"
                    android:layout_width="0dp"
                    android:layout_height="19dp"
                    android:layout_weight="1"
                    android:hint="찾고있는 거래 검색해보기"
                    android:inputType="text"
                    android:textSize="16dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:background="@android:color/transparent"/>

                <ImageButton
                    android:id="@+id/searchButton"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_22"
                    app:tint="#A6A6A6" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/search_border"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">


            <TextView
                android:layout_width="80dp"
                android:layout_height="23dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="15dp"
                android:text="실시간 글"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="18dp"></TextView>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginRight="33dp"
                    android:layout_marginTop="15dp"
                    android:text="더보기"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="14dp"></TextView>


            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/realtime_trade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:orientation="vertical"
            android:background="@drawable/search_border"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="80dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="15dp"
                    android:text="인기 글"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textSize="18dp"></TextView>



            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hottrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />

        </LinearLayout>



        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>