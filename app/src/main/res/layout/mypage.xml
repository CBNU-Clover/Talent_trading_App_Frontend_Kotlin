<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/pretendard_semibold"
                android:text="마이페이지"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <ImageButton
                android:id="@+id/setting_ic"
                android:layout_width="30dp"
                android:layout_height="31dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_15"
                android:backgroundTint="#282928" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_29"
                app:tint="#C0C0C0">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                
                
                <LinearLayout
                    android:layout_width="104dp"
                    android:layout_height="18dp"
                    android:orientation="horizontal">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID00"
                    android:textColor="#757575"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / "
                        android:textColor="#757575"
                        android:textSize="15dp" />

                <TextView
                    android:id="@+id/nickname_mypage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="#757575"
                    android:textSize="15dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="복대동"
                    android:textColor="#757575"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="등급"
                    android:textColor="#757575"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textSize="15dp" />





                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="랭킹? 등급?"
                    android:textColor="@color/black"
                    android:textSize="13dp" />-->

                <TextView
                    android:id="@+id/show_mypage_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/nanumbarunpenb"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/trading_history_bt"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/trade"
                android:backgroundTint="#282928" />

            <ImageButton
                android:id="@+id/history_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/file"
                android:backgroundTint="#282928" />

            <ImageButton
                android:id="@+id/mypoint_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/point"
                android:backgroundTint="#282928" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/malgunbd"
            android:text="내 거래기록"
            android:textColor="@color/black"
            android:textSize="12dp" />

            <TextView
            android:layout_width="70dp"
            android:layout_height="16dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/malgunbd"
            android:text="내 글 목록"
            android:textColor="@color/black"
            android:textSize="12dp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="16dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginLeft="11dp"
                android:fontFamily="@font/malgunbd"
                android:text="포인트"
                android:textColor="@color/black"
                android:textSize="12dp" />


        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>