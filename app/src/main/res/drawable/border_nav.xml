<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그림자 설정 -->
    <item android:right="2dp" android:left="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#020202" /> <!-- 그림자의 배경 색상 설정 -->
            <corners android:topLeftRadius="30dp"
                android:topRightRadius="30dp" /> <!-- 그림자의 둥근 모서리 설정 -->
        </shape>
    </item>
    <!-- 도형 설정 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 도형의 배경 색상 설정 -->
            <stroke
                android:width="2dp"
                android:color="#C0C0C0" />
            <corners android:topLeftRadius="30dp"
                android:topRightRadius="30dp" /> <!-- 윗부분을 둥글게 만드는 설정 -->
        </shape>
    </item>
</layer-list>